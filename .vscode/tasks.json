{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "release",
      "type": "shell",
      "command": "make",
      "group": "build",
      "args": ["CONFIG=RELEASE"],
    },
    {
      "label": "debug",
      "type": "shell",
      "command": "make",
      "group": "build",
      "args": ["CONFIG=DEBUG"],
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "make",
      "group": "build",
      "args": ["clean"],
    },
  ]
}